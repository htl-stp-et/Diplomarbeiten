      \end{titlepage}
      %======== ENDE DER TITELSEITE(N) ============================%
      
      % ERRORS and WARNINGS der KOMA Klasse scrreprt
       \else
    \par
    \@tempcnta=%
    #1%
    \relax\ifnum\@tempcnta=1\else
      \ClassWarning{\KOMAClassName}{%
